<!DOCTYPE html>
<html>
<head>
  <title>ListMarket</title>
  <%= stylesheet_link_tag "bootstrap.min.css", "bootstrap-responsive.min.css", "app.css" %>
  <%= javascript_include_tag :defaults, "bootstrap.min.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="navbar navbar-fixed-top navbar-inner">
    <span class="brand">
      List Market
    </span>
    <ul class="nav">
      <li> <%= link_to "Messages", messages_path %> </li>
      <li> <%= link_to "Home", root_path %> </li>
    </ul>
  </div>
  <div class="pseudo-topbar">
  </div>
  <div class="container-fluid">
    <div class="span4 navbar-fixed-left">
      <ul class="nav nav-pills nav-stacked well">
        <% @messages.each do |message| %>
          <li id=<%= message.id %>>
            <a href=<%= message_path(message)%>>  <%= message.title %>  <span class="label label-<%= message.tags.first.id == 1 ? 'info' : 'success' %>" > <%= message.tags.first.name %> </span></a>
         </li>
        <% end %>
      </ul>
    </div>
    <div class="span4 pseudo-navbar">
    </div>
    <div class="row-fluid">
      <div class="span8">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
